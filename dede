// Tambahkan tombol refresh ke dalam form atau di tempat yang sesuai
$('#booking-form').prepend('<button id="refresh-scheduler" class="dx-button">Refresh Scheduler</button>');

// Event handler untuk tombol refresh scheduler
$('#refresh-scheduler').on('click', function() {
    console.log('Refreshing scheduler...');
    
    // Ambil instance dari Scheduler
    const scheduler = $('#scheduler-container').dxScheduler('instance');

    // Panggil API untuk mengambil data terbaru (jika perlu)
    fetch(apiurl + "/getAppointments")
        .then(response => response.json())
        .then(newData => {
            // Update dataSource Scheduler dengan data terbaru
            scheduler.option('dataSource', newData);
            scheduler.repaint(); // Memastikan tampilan diperbarui
            console.log('Scheduler refreshed successfully!');
            alert('Scheduler refreshed!');
        })
        .catch(error => {
            console.error('Error refreshing scheduler:', error);
            alert('Failed to refresh scheduler.');
        });
});
