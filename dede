var schedulerInstance; // â¬…ï¸ Pastikan deklarasi di luar $(document).ready()

$(document).ready(function () {
    schedulerInstance = $(".scheduler").dxScheduler({
        timeZone: 'Asia/Makassar',
        dataSource: booking,
        repaintChangesOnly: true,
        views: ['month'],
        currentView: 'month',
        currentDate: new Date(),
        firstDayOfWeek: 1,
        startDayHour: 10,
        endDayHour: 22,
        colorExpr: "color",
        showAllDayPanel: false,
        height: 710,
        groups: ['ghm_room_id'],
        resources: [
            {
                fieldExpr: 'ghm_room_id',
                allowMultiple: false,
                dataSource: dataSource,
                label: 'Room Name',
            },
        ],
        editing: {
            refreshMode: 'reshape',
            mode: 'cell',
            allowAdding: true,
            allowUpdating: true,
            allowDeleting: true,
        }
    }).dxScheduler("instance"); // â¬…ï¸ Ambil instance Scheduler dengan benar
});
=============================
function repaintScheduler() {
    if (!schedulerInstance) {
        console.warn("âš ï¸ schedulerInstance belum diinisialisasi. Tunggu sampai Scheduler siap.");
        return;
    }

    let url = apiurl + "/" + modname;
    console.log("ğŸ”„ Fetching new data from:", url);

    sendRequest(url, "GET")
        .then(newData => {
            console.log("âœ… Data Fetched:", newData);

            if (!Array.isArray(newData) || newData.length === 0) {
                console.warn("âš ï¸ Warning: Data kosong setelah update!");
                return;
            }

            let newDataCopy = JSON.parse(JSON.stringify(newData));
            schedulerInstance.option("dataSource", newDataCopy);
            schedulerInstance.repaint();
        })
        .catch(error => {
            console.error("âŒ Gagal mengambil data terbaru:", error);
        });
}
