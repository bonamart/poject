function repaintScheduler() {
    var scheduler = $(".scheduler").dxScheduler("instance");

    // ğŸ”¥ Ambil ulang data dari server sebelum repaint
    $.ajax({
        url: apiurl + "/" + modname,
        type: "GET",
        dataType: "json",
        success: function (newData) {
            console.log("Updated Data:", newData); // âœ… Debug: Pastikan data diterima dari API

            if (Array.isArray(newData) && newData.length > 0) {
                scheduler.option("dataSource", newData); // âœ… Update dataSource
            } else {
                console.warn("âš ï¸ Warning: Data kosong setelah update!");
            }

            scheduler.repaint(); // ğŸ”„ Repaint agar perubahan langsung terlihat
        },
        error: function (xhr, status, error) {
            console.error("âŒ Gagal mengambil data terbaru:", error);
        }
    });
}
