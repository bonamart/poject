function repaintScheduler() {
    var scheduler = $(".scheduler").dxScheduler("instance");

    // 🔥 Ambil ulang data dari server sebelum repaint
    $.ajax({
        url: apiurl + "/" + modname,
        type: "GET",
        dataType: "json",
        success: function (newData) {
            console.log("Updated Data:", newData); // ✅ Debug: Pastikan data diterima dari API

            if (Array.isArray(newData) && newData.length > 0) {
                scheduler.option("dataSource", newData); // ✅ Update dataSource
            } else {
                console.warn("⚠️ Warning: Data kosong setelah update!");
            }

            scheduler.repaint(); // 🔄 Repaint agar perubahan langsung terlihat
        },
        error: function (xhr, status, error) {
            console.error("❌ Gagal mengambil data terbaru:", error);
        }
    });
}
